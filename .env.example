# -----------------------------------------------------------------------------
# Authentication (Keycloak)
# -----------------------------------------------------------------------------

# The OpenID Connect Issuer URL for your Keycloak realm.
# Example: http://localhost:8080/realms/myrealm
KEYCLOAK_ISSUER=

# The Client ID registered in Keycloak for this application.
KEYCLOAK_CLIENT_ID=

# The Client Secret for the confidential client.
# DO NOT commit the actual secret to the repository.
KEYCLOAK_CLIENT_SECRET=

# The Redirect URI (Callback URI) where Keycloak sends the user after login.
# This must match the "Valid Redirect URIs" in Keycloak settings.
KEYCLOAK_CALLBACK_URI=

# The URI where the user is redirected after a successful logout.
# This must be included in the "Web Origins" or "Valid Redirect URIs" in Keycloak.
POST_LOGOUT_REDIRECT_URI=

# -----------------------------------------------------------------------------
# Session Storage (Valkey)
# -----------------------------------------------------------------------------

# The hostname or connection string for the Valkey server.
VALKEY_URL=

# The port number for the Valkey server.
VALKEY_PORT=6379
